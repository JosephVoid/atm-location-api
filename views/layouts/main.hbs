<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="bootstrap.min.css" rel="stylesheet">
    <script src="bootstrap.min.js"></script>
    <title>ATM Mangement</title>
    <script>
    </script>
</head>
<body>
    <header class="p-4">
        <H1>DASHEN ATM BOT MANAGMENT</H1>
    </header>
    <div class="p-2">
        Running on: {{control.host}}
    </div>
    <div class="p-2">
        <h3>SEARCH BY NAME</h3>
        <form action="http://{{control.host}}:5000/search" method="post" encType="application/json">
            <input type="text" name="query">
            <input type="submit" value="Run">
        </form>
        <form action="http://{{control.host}}:5000/add" method="post" encType="application/json">
            <input type="text" name="query">
            <input type="submit" value="Run">
        </form>
    </div>
    <div style="position: absolute;right: 0;top: 0;padding: 1em;background-color: lightgreen;margin: 2em; visibility: {{control.success}}">
        Successful
    </div>
    <div>
        <table class="table table-hover table-bordered" style="padding: 1em;">
            <thead class="table-dark">
                <tr>
                <td>Terminal ID</td>
                <td>Location</td>
                <td>Latitude and Longitude</td>
                <td>HAS PIC</td>
                <td></td>
                </tr>
            </thead>
                <tbody class="table-group-divider">
                {{#each data}}
                <tr>
                    <td>{{this.TERMINAL_ID}}</td>                    
                    <td>{{this.LOCATION}}</td>
                    <td>
                        <form action="http://{{control.host}}:5000/update?tid={{this.TERMINAL_ID}}" method='post' encType="application/json">
                            <input type="number" name="lat" id="lat" value="{{this.LATITIUDE}}" step="any">
                            <input type="number" name="lon" id="lon" value="{{this.LONGITUDE}}" step="any">
                            <input type='submit' value='Update' />
                        </form>
                    </td>
                    {{#if this.PIC}}
                        <td style="background-color: green;color:white">Yes</td>
                    {{else}}
                        <td style="background-color: red;color:white">No</td>
                    {{/if}}
                    <td>
                        <form ref='uploadForm' 
                            id='uploadForm' 
                            action='http://{{control.host}}:5000/upload?tid={{this.TERMINAL_ID}}' 
                            method='post' 
                            encType="multipart/form-data">
                            <input type="file" name="sampleFile" />
                            <input type='submit' value='Upload!' />
                        </form>     
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
</body>
</html>